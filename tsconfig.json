{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "~mb/*": ["src/*"],
      "~mb/default/*": ["src/components/Default/*"],
      "~mb/sections/*": ["src/components/Sections/*"],
      "~mb/cards/*": ["src/components/Cards/*"],
      "~mb/buttons/*": ["src/components/Buttons/*"],
      "~mb/icons/*": ["src/components/Icons/*"],
      "~mb/lists/*": ["src/components/Lists/*"],
      "~mb/marketplace/*": ["src/components/Marketplace/*"],
      "~mb/animation/*": ["src/lib/animation/*"],
      "~mb/hooks/*": ["src/lib/hooks/*"],
    },
    "types": ["vite/client"]
  },
  "include": ["src", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
